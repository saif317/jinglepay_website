---
export type FeatureBannerProps = {
  titles: string[];
  subtitle?: string;
  tagline?: string;
  backgroundColor?: string;
  textColor?: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
  type?: 'feature';
};

const { titles, subtitle, tagline, backgroundColor, textColor } = Astro.props;
---

<div
  class={`w-full p-8 mb-8 overflow-hidden rounded-2xl text-4xl h-80 ${backgroundColor}`}
  style={` color: ${textColor};`}
>
  <div class='container flex flex-row items-center justify-between'>
    <div class='flex-1 text-left'>
      {
        tagline && (
          <span class='inline-block px-3 py-1 mb-4 text-sm font-medium bg-white rounded-full bg-opacity-20'>
            {tagline}
          </span>
        )
      }
      {titles.map((title: string) => <h2 class='text-[2.5rem] font-black m-0 leading-tight max-w-[450px]'>{title}</h2>)}
      {subtitle && <p class='text-xl mt-4 opacity-90 max-w-[450px]'>{subtitle}</p>}
    </div>
    <div class='flex justify-end flex-1 mt-0 mt-6'>
      <slot />
    </div>
  </div>
</div>
