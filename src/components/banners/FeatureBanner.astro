---
import type { ImageMetadata } from 'astro';
export type FeatureBannerProps = {
  titles: string[];
  subtitle?: string;
  tagline?: string;
  backgroundColor?: string;
  textColor?: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
  type?: 'feature';
  shadow?: ImageMetadata;
};

const { titles, subtitle, tagline, backgroundColor, textColor = '#FFFFFF', shadow } = Astro.props;
---

<div
  class={`w-full p-6 sm:p-8 md:p-10 overflow-hidden rounded-xl md:rounded-2xl h-full ${backgroundColor}`}
  style={`color: ${textColor};`}
>
  <div class='container flex flex-col items-center justify-between h-full gap-4 mx-auto md:flex-row md:gap-8'>
    <div class='flex-1 w-full text-center md:text-left md:w-auto'>
      {
        tagline && (
          <span class='inline-block px-3 py-1 mb-3 text-xs font-medium bg-white rounded-full sm:mb-4 sm:text-sm bg-opacity-20'>
            {tagline}
          </span>
        )
      }
      {
        titles.map((title: string) => (
          <h2 class='text-2xl sm:text-3xl lg:text-[2.5rem] font-black m-0 leading-tight'>{title}</h2>
        ))
      }
      {
        subtitle && (
          <p class='max-w-md mx-auto mt-3 text-base sm:text-lg lg:text-xl sm:mt-4 opacity-90 md:mx-0'>{subtitle}</p>
        )
      }
    </div>
    <div class='flex items-center justify-center w-full mt-4 md:justify-end md:w-auto md:mt-0'>
      <slot />
    </div>
  </div>
</div>
