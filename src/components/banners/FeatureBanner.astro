---
import type { ImageMetadata } from 'astro';
export type FeatureBannerProps = {
  titles: string[];
  subtitle?: string;
  tagline?: string;
  backgroundColor?: string;
  textColor?: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
  type?: 'feature';
  shadow?: ImageMetadata;
};

const { titles, subtitle, tagline, backgroundColor, textColor = '#FFFFFF', shadow } = Astro.props;
const { lang } = Astro.locals;
---

<div
  class={`w-full p-6 sm:p-8 md:p-10 overflow-hidden rounded-xl md:rounded-2xl 4xl:rounded-3xl h-full ${backgroundColor}`}
  style={`color: ${textColor};`}
>
  <div class='container flex flex-col gap-4 justify-between items-center mx-auto h-full md:flex-row md:gap-8'>
    <div class='flex-1 w-full text-center md:text-start md:w-auto'>
      {
        tagline && (
          <span class='inline-block px-3 py-1 mb-3 text-xs font-medium bg-white bg-opacity-20 rounded-full sm:mb-4 sm:text-sm'>
            {tagline}
          </span>
        )
      }
      {
        titles.map((title: string) => (
          <h2
            class={`text-2xl sm:text-3xl lg:text-[2.5rem] 3xl:text-[3rem] 4xl:text-[3.5rem] font-black m-0 leading-tight ${lang === 'ur' || lang === 'ar' ? 'text-right' : 'text-left'}`}
          >
            {title}
          </h2>
        ))
      }
      {
        subtitle && (
          <p
            class={`mx-auto mt-3 max-w-md text-base opacity-90 sm:text-lg lg:text-xl sm:mt-4 md:mx-0 text-start 3xl:text-2xl 4xl:text-3xl`}
          >
            {subtitle}
          </p>
        )
      }
    </div>
    <div class='flex justify-center items-center mt-4 w-full md:justify-end md:w-auto md:mt-0'>
      <slot />
    </div>
  </div>
</div>
