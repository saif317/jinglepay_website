---
import QRDownload from '@components/hero-section/QRDownload.astro';
import { Image } from 'astro:assets';
import bankAlfalah from '@assets/logos/bank-alfalah.svg';
---

<section class='flex justify-center pb-24 pb-16 pt-[184px] text-center bg-white'>
  <div class='container'>
    <h1 class='text-[2.75rem] leading-tight font-bold mb-6 max-w-[800px] mx-auto'>Simplifying all money!</h1>
    <p class='text-xl text-gray-600 mb-10 max-w-[650px] mx-auto'>
      Jingle Pay is the go-to money app for your everyday financial needs.
    </p>
    <div class='flex flex-row gap-x-4 justify-center'>
      <QRDownload />
      <div
        class='flex flex-col items-center justify-center rounded-lg border-2 border-[#C8C8C8] shadow-md w-[265px] py-1.5'
      >
        <p class='font-normal text-[15px] text-[#616161]'>Powered by</p>
        <Image src={bankAlfalah} alt='Bank Alfalah' height={32} />
      </div>
    </div>
  </div>
</section>
