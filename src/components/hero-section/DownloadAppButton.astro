---
import playStoreImage from '@assets/icons/playstore.svg';
import appStoreImage from '@assets/icons/appstore.svg';
import { Image } from 'astro:assets';
---

<div class='flex flex-wrap gap-3 justify-center sm:gap-4'>
  <a
    href='https://play.google.com/store/apps/details?id=com.jinglepay&hl=en'
    class='inline-flex items-center px-4 py-2.5 w-full text-black no-underline bg-gray-50 rounded-lg border border-gray-300 transition-all duration-200 ease-in-out sm:w-auto hover:bg-gray-100 hover:shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400'
  >
    <Image src={playStoreImage} alt='Get it on Google Play' class='flex-shrink-0 mr-2.5 w-6 h-6' loading='lazy' />
    <div class='flex flex-col leading-tight text-left'>
      <span class='text-xs font-medium text-gray-600'>GET IT ON</span>
      <span class='text-base font-semibold'>Google Play</span>
    </div>
  </a>
  <a
    href='https://apps.apple.com/pl/app/jingle-pay/id1493392189'
    class='inline-flex items-center px-4 py-2.5 w-full text-black no-underline bg-gray-50 rounded-lg border border-gray-300 transition-all duration-200 ease-in-out sm:w-auto hover:bg-gray-100 hover:shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400'
  >
    <Image src={appStoreImage} alt='Download on the App Store' class='flex-shrink-0 mr-2.5 w-6 h-6' loading='lazy' />
    <div class='flex flex-col leading-tight text-left'>
      <span class='text-xs font-medium text-gray-600'>Download on the</span>
      <span class='text-base font-semibold'>App Store</span>
    </div>
  </a>
</div>
