---
import { Image } from 'astro:assets';
import QRCodeGenerator from '@components/common/QRCodeGenerator.astro';
import QRModalTriggerer from '@components/common/QRModalTriggerer.astro';
// Removed qrCode import/prop as QRCodeGenerator is used directly
// Removed text prop as it's hardcoded now, simpler for this example

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const {
  translations: { hero = {} },
} = Astro.locals;
---

<QRModalTriggerer>
  <div
    class={`relative flex items-center rounded-xl py-1.5 px-2 hover:-translate-y-0.5 transition-transform duration-200 border-2 border-[#C8C8C8] gap-x-3 sm:gap-x-4 text-start w-full max-w-[16rem] md:max-w-[20rem] ${className}`}
  >
    <div class='flex flex-shrink-0 justify-center items-center'>
      <QRCodeGenerator />
    </div>
    <div class='flex flex-col justify-center'>
      <span class='block text-base font-bold leading-tight sm:text-lg md:text-xl lg:text-lg'>{hero.cta[0]}</span>
      <span class='block text-base font-bold leading-tight sm:text-lg md:text-xl lg:text-lg'>{hero.cta[1]}</span>
    </div>
  </div>
</QRModalTriggerer>
