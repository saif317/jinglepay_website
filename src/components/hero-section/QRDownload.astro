---
// Import any needed dependencies
import { Image } from 'astro:assets';

// Props for customization
interface Props {
  qrCodeSrc?: ImageMetadata;
  text?: string;
  class?: string;
}

import qrCode from '@assets/icons/qr.png';
import QRModal from '@components/common/QRModal.astro';

const { qrCodeSrc = qrCode, text = 'Get the Jingle Pay App', class: className = '' } = Astro.props;
---

<QRModal qrCodeSrc={qrCodeSrc} isOpen={false}>
  <div
    class={`relative inline-flex items-center rounded-lg p-1.5 shadow-md hover:-translate-y-0.5 transition-transform duration-200 border-2 gap-1.5 ${className} text-left mx-auto max-w-[265px]`}
  >
    <div class='flex items-center justify-center rounded-l-lg'>
      <Image src={qrCodeSrc} alt='Download Jingle Pay App' width={80} height={80} />
    </div>
    <span class='block text-2xl font-bold'>{text}</span>
  </div>
</QRModal>
