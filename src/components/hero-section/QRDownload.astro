---
import { Image } from 'astro:assets';
import QRCodeGenerator from '@components/common/QRCodeGenerator.astro';
import QRModalTriggerer from '@components/common/QRModalTriggerer.astro';
// Removed qrCode import/prop as QRCodeGenerator is used directly
// Removed text prop as it's hardcoded now, simpler for this example

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<QRModalTriggerer>
  <div
    class={`relative flex items-center rounded-xl py-1.5 px-2 shadow-md hover:-translate-y-0.5 transition-transform duration-200 border-2 border-[#C8C8C8] gap-x-3 sm:gap-x-4 text-left w-full max-w-[16rem] md:max-w-[20rem] lg:max-w-full lg:w-full ${className}`}
  >
    <div class='flex items-center justify-center flex-shrink-0'>
      <QRCodeGenerator />
    </div>
    <div class='flex flex-col justify-center'>
      <span class='block text-base font-bold leading-tight sm:text-lg md:text-xl lg:text-lg'>Get the</span>
      <span class='block text-base font-bold leading-tight sm:text-lg md:text-xl lg:text-lg'>Jingle Pay App</span>
    </div>
  </div>
</QRModalTriggerer>
