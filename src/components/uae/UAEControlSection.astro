---
/**
 * UAE Control Section ("Take full control" section)
 * Two-column layout: phone mock-ups on the left and copy/bullets on the right.
 * Background phone image assets live in src/assets/uae/phone.png
 */
import { Image } from 'astro:assets';
import phoneMock from '../../assets/uae/phone.png';

// Import control localization directly for UAE in English
import controlLocale from '../../constants/locale/are/en/control.js';

// Define control type to help TypeScript recognize the structure
type ControlLocale = {
  heading: {
    prefix: string;
    highlight: string;
    suffix: string;
  };
  description: {
    part1: string;
    part2: string;
  };
  benefits: {
    title: string;
    items: string[];
  };
};

// Use either from translations (if exists) or from direct import as fallback
const control = (Astro.locals.translations?.control || controlLocale) as ControlLocale;
---

<div
  class='flex flex-col xl:flex-row items-center xl:items-start self-stretch justify-center xl:justify-between gap-8 md:gap-10 lg:gap-12 xl:gap-16 2xl:gap-20 mt-8 md:mt-16 lg:mt-20 xl:mt-[108px] mx-4 md:mx-8 lg:mx-10 xl:mx-14 2xl:mx-20 3xl:mx-24'
>
  <div
    class='relative bg-slate-100 rounded-[20px] w-full max-w-[450px] md:max-w-[500px] lg:max-w-[600px] xl:w-[500px] 2xl:w-[587px] 3xl:w-[650px] h-auto md:h-[420px] lg:h-[480px] xl:h-[520px] 2xl:h-[553px] 3xl:h-[600px] overflow-hidden flex items-center justify-center px-4 md:px-12 lg:px-16 xl:px-24 2xl:px-36 3xl:px-40 pt-4 md:pt-6 lg:pt-8 xl:pt-10 2xl:pt-[42px] 3xl:pt-14 flex-shrink-0'
  >
    <Image src={phoneMock} alt='Jingle Pay app on phone' loading='lazy' class='object-contain max-w-full max-h-full' />
  </div>
  <div class='inline-flex flex-col items-start justify-center gap-5'>
    <div class='self-stretch justify-center'>
      <span class='text-zinc-800 text-5xl font-semibold font-[Hero_New] leading-[57.60px]'>{control.heading.prefix} </span><span
        class='text-violet-500 text-5xl font-semibold font-[Hero_New] leading-[57.60px]'>{control.heading.highlight}</span
      ><span class='text-zinc-800 text-5xl font-semibold font-[Hero_New] leading-[57.60px]'>
        {control.heading.suffix}</span
      >
    </div>
    <div class='justify-start text-neutral-500 text-xl font-normal font-[Hero_New] leading-7'>
      {control.description.part1}<br /><br />{control.description.part2}
    </div>
    <div class='justify-start text-black text-xl font-semibold font-[Hero_New] leading-7'>{control.benefits.title}</div>
    <div class='self-stretch justify-start'>
      <ul class='list-disc pl-5 space-y-3'>
        {control.benefits.items.map((item: string) => (
          <li class='text-neutral-500 text-xl font-medium font-[Hero_New] leading-10'>
            <span set:html={item} />
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>
