---
/**
 * UAE Peer-to-Peer Payments Section
 * Two-column layout: copy on the left, image on the right.
 */
import { Image } from 'astro:assets';
import womanImg from '../../assets/uae/woman.jpg';

const { p2p } = Astro.locals.translations;
---

<section class='flex justify-center w-full px-4 sm:px-6 md:px-8 lg:px-12 xl:px-[170px] py-10 sm:py-16 lg:py-20 xl:py-[114px]'>
  <div class='flex flex-col-reverse items-center w-full max-w-6xl xl:flex-row gap-8 xl:gap-15'>
    <!-- Copy -->
    <div class='flex flex-col flex-1 w-full xl:max-w-md text-center xl:text-left gap-6 xl:gap-9'>
      <h2 class='text-gray-900 text-2xl sm:text-3xl lg:text-3xl xl:text-4xl font-extrabold font-["Hero_New"]'>
        {p2p?.heading || 'Peer-to-Peer Payments'}
      </h2>
      <p class='text-gray-900 text-base sm:text-lg lg:text-lg xl:text-xl font-normal font-["DM_Sans"]'>
        {
          p2p?.description ||
            'Instantly send money to friends using just their mobile number- fast, secure, and hassle-free!'
        }
      </p>
    </div>

    <!-- Image -->
    <div class='flex justify-center flex-1 w-full'>
      <Image
        src={womanImg}
        alt='Happy woman sending money with Jingle Pay'
        class='w-full max-w-[320px] sm:max-w-[400px] md:min-w-[460px] aspect-[585/508] rounded-[24px] sm:rounded-[44px] border border-gray-100 object-cover'
        loading='lazy'
      />
    </div>
  </div>
</section>
