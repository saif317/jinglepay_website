---
/**
 * UAE Benefits Section â€“ statistics & imagery grid
 */
import { Image } from 'astro:assets';
import globeImg from '../../assets/uae/benefits/globe.png';
import womanImg from '../../assets/uae/benefits/benefit-woman.jpg';
import phoneImg from '../../assets/uae/benefits/phone.png';
import coupleImg from '../../assets/uae/benefits/couple.jpg';

const { benefits } = Astro.locals.translations;
---

<section class="w-full py-20 flex justify-center px-4 bg-white">
  <div class="max-w-7xl w-full grid gap-6 lg:grid-cols-2">
    <!-- Gradient statistics card -->
    <div class="bg-gradient-to-br from-violet-500 via-violet-400 to-violet-500 rounded-2xl p-8 flex flex-col justify-between text-white min-h-[660px]">
      <div>
        <p class="text-xl font-medium leading-[60px]">{benefits?.statistics?.trusted?.prefix || "Trusted by"}</p>
        <h3 class="text-5xl sm:text-6xl font-black leading-[60px] mb-2">{benefits?.statistics?.trusted?.number || "+500,000"}</h3>
        <p class="text-xl font-medium mb-10">{benefits?.statistics?.trusted?.suffix || "Users worldwide"}</p>
      </div>
      <div class="flex justify-center mb-10">
        <Image src={globeImg} alt="Globe" class="w-80 h-80 object-contain" loading="lazy" />
      </div>
      <div>
        <p class="text-xl font-medium leading-[50px] mb-2">{benefits?.statistics?.transactions?.prefix || "With over"}</p>
        <h3 class="text-5xl sm:text-6xl font-extrabold leading-[72px]">{benefits?.statistics?.transactions?.number || "USD 2 Billion"}</h3>
        <p class="text-xl font-medium">{benefits?.statistics?.transactions?.suffix || "processed in transactions"}</p>
      </div>
    </div>

    <!-- Right grid -->
    <div class="grid gap-6 h-full" style="grid-template-rows: repeat(2, 1fr);">
      <!-- Top row: woman + zero fees card -->
      <div class="grid gap-6 lg:grid-cols-2 h-full">
        <Image src={womanImg} alt="Woman paying" class="w-full h-full object-cover rounded-2xl" loading="lazy" />

        <div class="relative bg-white rounded-2xl flex flex-col items-center justify-start p-6 shadow-sm">
          <h4 class="text-zinc-800 text-xl font-black mb-4 self-start">{benefits?.zeroFees?.title || "ZERO FEES"}</h4>
          <div class="w-full flex-1 flex items-center justify-center">
            <Image src={phoneImg} alt="Phone screenshot" class="object-contain max-h-60" loading="lazy" />
          </div>
        </div>
      </div>

      <!-- Bottom row: savings card + couple image -->
      <div class="grid gap-6 lg:grid-cols-2 h-full">
        <div class="bg-slate-100 rounded-2xl p-6 flex flex-col justify-between">
          <div>
            <h4 class="text-zinc-800 text-xl font-black mb-6">{benefits?.savings?.title || "Savings generated for customers"}</h4>
            <h3 class="text-zinc-800 text-3xl font-black mb-4">{benefits?.savings?.amount || "USD 5,000,000"}</h3>
            <p class="text-zinc-900 text-lg leading-loose">{benefits?.savings?.description || "Jingle Pay is democratizing access to financial services"}</p>
          </div>
        </div>
        <Image src={coupleImg} alt="Couple using app" class="w-full h-full object-cover rounded-2xl" loading="lazy" />
      </div>
    </div>
  </div>
</section>
