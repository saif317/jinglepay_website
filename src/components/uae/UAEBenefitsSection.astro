---
/**
 * UAE Benefits Section â€“ statistics & imagery grid
 */
import { Image } from 'astro:assets';
import globeImg from '../../assets/uae/benefits/globe.png';
import womanImg from '../../assets/uae/benefits/benefit-woman.jpg';
import phoneImg from '../../assets/uae/benefits/phone.png';
import coupleImg from '../../assets/uae/benefits/couple.jpg';

const { benefits } = Astro.locals.translations;
---

<section class='flex justify-center w-full px-3 py-10 bg-white sm:py-20 sm:px-4'>
  <div class='grid w-full gap-4 max-w-7xl sm:gap-6 lg:grid-cols-2'>
    <!-- Gradient statistics card -->
    <div
      class='flex flex-col justify-between p-5 text-white bg-gradient-to-br from-violet-500 via-violet-400 to-violet-500 rounded-2xl sm:p-8'
    >
      <div>
        <p class='text-base sm:text-xl font-medium leading-normal sm:leading-[60px]'>
          {benefits?.statistics?.trusted?.prefix || 'Trusted by'}
        </p>
        <h3 class='text-3xl xs:text-4xl sm:text-5xl md:text-6xl font-black leading-tight sm:leading-[60px] mb-2'>
          {benefits?.statistics?.trusted?.number || '+500,000'}
        </h3>
        <p class='text-base font-medium sm:text-xl pl-0 xs:pl-8 sm:pl-[12rem]'>
          {benefits?.statistics?.trusted?.suffix || 'Users worldwide'}
        </p>
      </div>
      <div class='flex justify-center py-4 xs:py-5 sm:py-6'>
        <Image
          src={globeImg}
          alt='Globe'
          class='object-cover overflow-visible w-[13rem] h-36 sm:w-[23rem] sm:h-64 md:w-[29rem] md:h-80'
          loading='lazy'
        />
      </div>
      <div class='text-end'>
        <p class='text-base sm:text-xl font-medium pr-[12rem] sm:pr-[16rem] md:pr-[20rem] lg:pr-[20rem]'>
          {benefits?.statistics?.transactions?.prefix || 'With over'}
        </p>
        <h3 class='text-3xl font-extrabold xs:text-4xl sm:text-5xl md:text-6xl lg:text-6xl'>
          {benefits?.statistics?.transactions?.number || 'USD 2 Billion'}
        </h3>
        <p class='text-base font-medium sm:text-xl'>
          {benefits?.statistics?.transactions?.suffix || 'processed in transactions'}
        </p>
      </div>
    </div>

    <!-- Right grid -->
    <div class='grid h-full gap-4 sm:gap-6' style='grid-template-rows: repeat(2, auto);'>
      <!-- Top row: woman + zero fees card -->
      <div class='grid h-full gap-4 sm:gap-6 lg:grid-cols-2'>
        <Image src={womanImg} alt='Woman paying' class='object-cover w-full h-full rounded-2xl' loading='lazy' />

        <div
          class='relative flex flex-col items-center justify-start p-4 pb-0 shadow-sm sm:pb-0 bg-neutral-100 rounded-2xl sm:p-6'
        >
          <h4 class='text-base font-black text-center xs:text-lg text-zinc-800 sm:text-xl'>
            {benefits?.zeroFees?.title || 'ZERO FEES'}
          </h4>
          <div class='flex items-end justify-center flex-1 w-full'>
            <Image
              src={phoneImg}
              alt='Phone screenshot'
              class='object-contain max-h-32 xs:max-h-40 sm:max-h-60'
              loading='lazy'
            />
          </div>
        </div>
      </div>

      <!-- Bottom row: savings card + couple image -->
      <div class='grid h-full gap-4 p-4 sm:gap-6 lg:grid-cols-2 bg-slate-100 rounded-2xl sm:p-6'>
        <div class='flex flex-col justify-between'>
          <h4 class='mb-2 text-base font-black xs:text-lg text-zinc-800 sm:text-xl xs:mb-3 sm:mb-6'>
            {benefits?.savings?.title || 'Savings generated for customers'}
          </h4>
          <h3 class='mb-1 text-xl font-black xs:text-2xl text-zinc-800 sm:text-3xl xs:mb-2 sm:mb-4'>
            {benefits?.savings?.amount || 'USD 5,000,000'}
          </h3>
          <p class='text-sm leading-tight xs:text-base text-zinc-900 sm:text-lg xs:leading-normal sm:leading-relaxed'>
            {benefits?.savings?.description || 'Jingle Pay is democratizing access to financial services'}
          </p>
        </div>
        <Image src={coupleImg} alt='Couple using app' class='object-cover w-full h-full rounded-2xl' loading='lazy' />
      </div>
    </div>
  </div>
</section>
