---
/**
 * UAE Info Cards Section (Marketplace / No Fees / Joining Bonus)
 * Three side-by-side cards on desktop, stacked on mobile.
 */

import MarketplaceIcon from '@assets/uae/wallet.svg';
import NoFeesIcon from '@assets/uae/wallet (1).svg';
import JoiningBonusIcon from '@assets/uae/wallet (2).svg';

const { infoCards } = Astro.locals.translations;
---

<section
  class='px-4 pt-[60px] pb-[80px] sm:p-8 md:p-[80px] lg:p-[90px] lg:px-[45px] xl:p-[100px] 2xl:p-[120px] 2xl:pb-[132px]'
>
  <div class='mx-auto max-w-7xl'>
    <div
      class='flex flex-col justify-between gap-[30px] md:gap-[40px] lg:flex-row lg:gap-4 xl:gap-[30px] 2xl:gap-[50px]'
    >
      <!-- Card 1: Remittance Marketplace -->
      <div class='flex flex-col flex-1'>
        <!-- Header container: icon + title -->
        <div class='flex flex-row items-center gap-4 h-18'>
          <MarketplaceIcon class='flex-shrink-0 mt-1 w-9 h-9' />
          <h3
            class="text-gray-900 text-xl sm:text-2xl lg:text-lg xl:text-xl 2xl:text-2xl font-bold font-['Hero_New'] leading-7"
            set:html={infoCards.card1.title}
          />
        </div>

        <!-- Divider container -->
        <div class='py-2'>
          <hr class='self-stretch h-0 outline-1 outline-offset-[-0.50px] outline-zinc-400' />
        </div>

        <!-- Content container -->
        <div class='pt-2'>
          <p
            class="text-neutral-500 text-base sm:text-lg lg:text-base xl:text-lg 2xl:text-xl font-normal font-['DM_Sans']"
          >
            {infoCards.card1.content.line1}<br />{infoCards.card1.content.line2}
          </p>
        </div>
      </div>

      <!-- Card 2: No Fees -->
      <div class='flex flex-col flex-1'>
        <!-- Header container: icon + title -->
        <div class='flex flex-row items-center gap-4 h-18'>
          <NoFeesIcon class='flex-shrink-0 mt-1 w-9 h-9' />
          <h3
            class="text-gray-900 text-xl sm:text-2xl lg:text-lg xl:text-xl 2xl:text-2xl font-bold font-['Hero_New'] leading-7"
          >
            <span set:html={infoCards.card2.title.line1} />
            <br /><span set:html={infoCards.card2.title.line2} />
          </h3>
        </div>

        <!-- Divider container -->
        <div class='py-2'>
          <hr class='self-stretch h-0 outline-1 outline-offset-[-0.50px] outline-zinc-400' />
        </div>

        <!-- Content container -->
        <div class='pt-2'>
          <p
            class="text-neutral-500 text-base sm:text-lg lg:text-base xl:text-lg 2xl:text-xl font-normal font-['DM_Sans']"
          >
            {infoCards.card2.content.line1}<br />{infoCards.card2.content.line2}
          </p>
        </div>
      </div>

      <!-- Card 3: Joining Bonus -->
      <div class='flex flex-col flex-1'>
        <!-- Header container: icon + title -->
        <div class='flex flex-row items-center gap-4 h-18'>
          <JoiningBonusIcon class='flex-shrink-0 mt-1 w-9 h-9' />
          <h3
            class="text-gray-900 text-xl sm:text-2xl lg:text-lg xl:text-xl 2xl:text-2xl font-bold font-['Hero_New'] leading-7"
            set:html={infoCards.card3.title}
          />
        </div>

        <!-- Divider container -->
        <div class='py-2'>
          <hr class='self-stretch h-0 outline-1 outline-offset-[-0.50px] outline-zinc-400' />
        </div>

        <!-- Content container -->
        <div class='pt-2'>
          <p
            class="text-neutral-500 text-base sm:text-lg lg:text-base xl:text-lg 2xl:text-xl font-normal font-['DM_Sans']"
            set:html={infoCards.card3.content}
          />
        </div>
      </div>
    </div>
  </div>
</section>
