---
/**
 * UAE Info Cards Section (Marketplace / No Fees / Joining Bonus)
 * Three side-by-side cards on desktop, stacked on mobile.
 */

import MarketplaceIcon from '@assets/uae/wallet.svg';
import NoFeesIcon from '@assets/uae/wallet (1).svg';
import JoiningBonusIcon from '@assets/uae/wallet (2).svg';

const { infoCards } = Astro.locals.translations;
---

<section class='p-[120px]'>
  <div class='mx-auto max-w-7xl'>
    <div class='flex flex-col justify-between gap-[50px] md:flex-row'>
      <!-- Card 1: Remittance Marketplace -->
      <div class='flex-1 min-w-[250px] flex flex-col'>
        <!-- Header container: icon + title -->
        <div class='flex flex-row items-center gap-4 h-18'>
          <MarketplaceIcon class='flex-shrink-0 mt-1 w-9 h-9' />
          <h3 class="text-gray-900 text-2xl font-bold font-['Hero_New'] leading-7" set:html={infoCards.card1.title}>
          </h3>
        </div>

        <!-- Divider container -->
        <div class='py-2'>
          <hr class='self-stretch h-0 outline-1 outline-offset-[-0.50px] outline-zinc-400' />
        </div>

        <!-- Content container -->
        <div class='pt-2'>
          <p class="text-neutral-500 text-xl font-normal font-['DM_Sans']">
            {infoCards.card1.content.line1}<br />{infoCards.card1.content.line2}
          </p>
        </div>
      </div>

      <!-- Card 2: No Fees -->
      <div class='flex-1 min-w-[250px] flex flex-col'>
        <!-- Header container: icon + title -->
        <div class='flex flex-row items-center gap-4 h-18'>
          <NoFeesIcon class='flex-shrink-0 mt-1 w-9 h-9' />
          <h3 class="text-gray-900 text-2xl font-bold font-['Hero_New'] leading-7">
            <span set:html={infoCards.card2.title.line1}></span> <br /><span set:html={infoCards.card2.title.line2}></span>
          </h3>
        </div>

        <!-- Divider container -->
        <div class='py-2'>
          <hr class='self-stretch h-0 outline-1 outline-offset-[-0.50px] outline-zinc-400' />
        </div>

        <!-- Content container -->
        <div class='pt-2'>
          <p class="text-neutral-500 text-xl font-normal font-['DM_Sans']">
            {infoCards.card2.content.line1}<br />{infoCards.card2.content.line2}
          </p>
        </div>
      </div>

      <!-- Card 3: Joining Bonus -->
      <div class='flex-1 min-w-[250px] flex flex-col'>
        <!-- Header container: icon + title -->
        <div class='flex flex-row items-center gap-4 h-18'>
          <JoiningBonusIcon class='flex-shrink-0 mt-1 w-9 h-9' />
          <h3 class="text-gray-900 text-2xl font-bold font-['Hero_New'] leading-7" set:html={infoCards.card3.title}></h3>
        </div>

        <!-- Divider container -->
        <div class='py-2'>
          <hr class='self-stretch h-0 outline-1 outline-offset-[-0.50px] outline-zinc-400' />
        </div>

        <!-- Content container -->
        <div class='pt-2'>
          <p class="text-neutral-500 text-xl font-normal font-['DM_Sans']" set:html={infoCards.card3.content}>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
