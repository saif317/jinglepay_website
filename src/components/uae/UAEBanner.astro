---
/**
 * UAE Banner Component
 *
 * This component displays a modern banner with transaction overlay cards
 * for the UAE landing page, featuring money transfer visualizations.
 */
import { Image } from 'astro:assets';

// Import necessary assets
import bannerBgImage from '@assets/uae-banners/banner1/45ad6b454ce2af22a469169e6a6fb4ea42ebda14.jpg';
import personBgImage from '@assets/uae-banners/banner1/2df8bd598ed19bc8261af9270967c878876955b2.png';
import PayIconSvg from '@assets/uae-banners/banner1/Pay Icon.svg';
import DebitIcon from '@assets/uae-banners/banner1/Debit.svg';
import johnDoeImg from '@assets/uae-banners/banner1/john-doe.png';
import alexPaulImg from '@assets/uae-banners/banner1/alex-paul.jpg';
import BottomLeftArrowSvg from '@assets/uae-banners/banner1/bottom-left-arrow.svg';
import UAEIcon from '@assets/uae-banners/banner1/UAE.svg';
import INFlag from '@assets/uae-banners/banner1/IN.svg';
import RightArrowSvg from '@assets/uae-banners/banner1/right-arrow.svg';
import Moneygram from '@assets/uae-banners/banner1/moneygram.svg';
import Emq from '@assets/uae-banners/banner1/emq.svg';

// Component props with defaults
export interface Props {
  heading?: string;
  description?: string;
}

const {
  heading = 'Send money abroad instantly',
  description = 'Compare rates, choose your provider, and send money to your loved ones instantly with Jingle Pay.',
} = Astro.props;
---

<section class='relative w-full min-h-[600px] overflow-hidden'>
  <!-- Background Image with Overlay -->
  <div class='absolute inset-0 z-0'>
    <Image
      src={bannerBgImage}
      alt='Modern architectural background with palm trees'
      class='absolute object-cover h-full'
      loading='eager'
    />
    <div class='absolute inset-0 bg-gradient-to-r from-black/10 to-black/5'></div>
  </div>

  <!-- Main Content Container with proper z-index and padding -->
  <div class='relative z-10 h-full min-h-[600px]'>
    <!-- Person image absolute positioned within the container -->
    <!-- Circle backdrop -->
    <div
      class='w-48 h-48 rounded-full scale-50 sm:scale-70 md:scale-75 lg:scale-100 3xl:scale-125 absolute opacity-50 bg-neutral-100 left-[3rem] md:left-[9rem] lg:left-[12rem] xl:left-[357px] bottom-[38px] 3xl:left-[35rem] 4xl:left-[38rem]'
    >
    </div>
    <div
      class='rounded-full opacity-50 w-72 h-72 scale-50 sm:scale-70 md:scale-75 lg:scale-100 3xl:scale-125 bg-neutral-100 absolute left-[6rem] md:left-[12rem] lg:left-[18rem] xl:left-[502px] bottom-[155px] 3xl:left-[44rem] 4xl:left-[44rem]'
    >
    </div>
    <div
      class='rounded-full opacity-50 w-72 h-72 scale-50 sm:scale-70 md:scale-75 lg:scale-100 3xl:scale-125 bg-neutral-100 absolute left-[9rem] sm:left-[15rem] md:left-[18rem] lg:left-[27rem] xl:left-[697px] bottom-[96px] 3xl:left-[57rem] 4xl:left-[57rem]'
    >
    </div>

    <!-- Person image -->
    <Image
      src={personBgImage}
      alt='Person shopping with phone and shopping bags'
      loading='eager'
      class='absolute bottom-0 -translate-x-1/2 left-1/2 max-h-[400px] max-w-[600px] lg:max-h-[650px] lg:max-w-[860px]'
    />

    <!-- Cards Container - Flex layout instead of absolute positioning for better control -->
    <!-- Top row with side-by-side cards on tablet/desktop, stacked on mobile -->
    <!-- Left Card: Cash Withdrawal - Responsive sizing -->
    <div
      class='absolute w-full sm:w-auto scale-50 sm:scale-70 md:scale-85 lg:scale-100 3xl:scale-125 bg-white shadow-lg rounded-2xl left-[-3rem] sm:top-[3rem] sm:left-0 lg:top-[86px] lg:left-[122px]'
    >
      <div class='flex items-center p-3 sm:p-4 gap-x-10'>
        <div class='flex'>
          <div class='relative flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12'>
            <div
              class='flex items-center justify-center w-full h-full rounded-full bg-[#141414] text-white text-sm font-medium font-["Hero_New"] leading-tight'
            >
              JW
            </div>
            <div
              class='absolute flex items-center justify-center w-4 h-4 bg-white rounded-full shadow -bottom-1 -right-1 sm:w-5 sm:h-5 ring-1 ring-gray-200'
            >
              <PayIconSvg class='w-3 h-3 sm:w-[14px] sm:h-[14px]' aria-hidden='true' />
            </div>
          </div>
          <div class='flex-grow ml-3'>
            <h3 id='cash-withdrawal-card-title' class='text-sm font-semibold text-gray-900 sm:text-base'>
              Cash Withdrawal
            </h3>
            <p class='text-xs leading-snug text-gray-700 sm:text-sm'>John W.</p>
            <p class='text-xs leading-snug text-gray-500 sm:text-sm'>Using Cash Pickup</p>
          </div>
        </div>
        <div class='flex flex-col items-end justify-between h-full text-right gap-y-3'>
          <div class='flex items-center text-sm font-bold sm:text-base'>
            1,000 AED <DebitIcon aria-hidden='true' />
          </div>
          <div class='flex flex-col gap-y-1'>
            <div class='text-xs text-gray-500'>Today</div>
            <div class='text-zinc-600 text-xs font-normal font-[Hero_New] leading-3'>15:00</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Card: Request - With sticky header styling -->
    <div
      class='absolute scale-50 sm:scale-70 md:scale-85 lg:scale-100 3xl:scale-125 right-[-3rem] top-[7rem] lg:top-[60px] lg:right-[120px] p-4 bg-white shadow-lg rounded-2xl sm:right-0 sm:top-[10rem]'
    >
      <!-- Pull bar indicator -->
      <div class='absolute w-5 h-[3.40px] bg-stone-300 rounded-full -translate-x-1/2 top-2 left-1/2'></div>

      <div class='relative p-4 pt-2.5'>
        <div class='flex items-center justify-between mb-[9.08px]'>
          <h3 id='request-card-title' class='text-black text-sm font-semibold font-["Hero_New"] leading-none'>
            Request
          </h3>
        </div>

        <div class='self-stretch inline-flex justify-center items-start gap-4 mb-[9.08px] w-full'>
          <!-- John Doe -->
          <div class='w-12 inline-flex flex-col justify-start items-center gap-1.5'>
            <div class='w-8 h-8 overflow-hidden rounded-2xl bg-[#D9D9D9]'>
              <Image src={johnDoeImg} alt='John Doe' class='object-cover w-full h-full' loading='eager' />
            </div>
            <p class='text-center text-black text-[10px] font-medium font-["Hero_New"]'>John Doe</p>
          </div>

          <!-- Arrow -->
          <div class='p-[7.5px] bg-black rounded-full flex justify-center items-center'>
            <BottomLeftArrowSvg class='w-[14px] h-[14px] text-white fill-current' aria-hidden='true' />
          </div>

          <!-- Alex Paul -->
          <div class='w-12 inline-flex flex-col justify-start items-center gap-1.5'>
            <div class='w-8 h-8 overflow-hidden rounded-2xl bg-[#D9D9D9]'>
              <Image src={alexPaulImg} alt='Alex Paul' class='object-cover w-full h-full' loading='eager' />
            </div>
            <p class='text-center text-black text-[10px] font-medium font-["Hero_New"]'>Alex Paul</p>
          </div>
        </div>

        <!-- Amount field -->
        <div class='flex flex-col items-start justify-start gap-1'>
          <div class='self-stretch justify-center text-black text-[8px] font-semibold font-["Inter"] leading-[10.40px]'>
            Amount
          </div>
          <div
            class='self-stretch h-6 relative bg-white rounded-[3.58px] outline outline-[0.22px] outline-offset-[0px] outline-black/50 px-[7.16px] py-[4.67px] pb-[3.95px] pr-[11.18px]'
          >
            <div class='justify-center text-black text-xs font-medium font-["Inter"] leading-none'>1,000</div>
            <div class='absolute right-[11.18px] top-[4.67px] inline-flex justify-start items-center gap-[21.49px]'>
              <UAEIcon />
              <div class='text-right justify-center text-black text-xs font-normal font-["Inter"] leading-3'>AED</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom row with Send card and Provider comparison -->
    <!-- Send Money Card - Left -->
    <div
      class='absolute scale-50 sm:scale-70 md:scale-85 lg:scale-100 3xl:scale-125 lg:bottom-[75px] lg:left-[174px] left-[-1rem] bottom-[11rem] bg-white shadow-lg rounded-[16px] p-[16px] sm:left-0'
    >
      <div class='flex items-center justify-between mb-4'>
        <h3 id='send-card-title' class='text-neutral-900 text-sm font-semibold font-["Hero_New"] leading-tight'>
          Send
        </h3>
        <div class='flex items-center'>
          <span class='text-neutral-900/75 text-sm font-normal font-["Hero_New"] leading-tight'> AED </span>
          <span class='text-neutral-900/75 text-sm font-semibold font-["Hero_New"] leading-tight ml-1'>1,000</span>
        </div>
      </div>

      <!-- Currency conversion display -->
      <div class='flex items-center justify-between gap-x-[38px]'>
        <!-- From -->
        <div class='flex flex-col items-center'>
          <UAEIcon class='w-6 h-6' />
          <span class='mt-1 text-black text-base font-normal font-["Inter"]'>AED</span>
        </div>

        <!-- Arrow -->
        <div class='flex items-center justify-center p-[3.5px] bg-black rounded-full'>
          <RightArrowSvg class='w-[21px] h-[21px] text-white fill-current' />
        </div>

        <!-- To -->
        <div class='flex flex-col items-center'>
          <INFlag class='w-6 h-6 rounded-full' />
          <span class='mt-1 text-black text-base font-normal font-["Inter"]'>INR</span>
        </div>
      </div>
    </div>

    <!-- Provider Comparison Cards - Right -->
    <ul
      role='list'
      class='absolute scale-50 sm:scale-70 md:scale-85 lg:scale-100 3xl:scale-125 lg:right-[69px] lg:bottom-[53px] flex flex-col space-y-10 right-[-4rem] bottom-0 sm:right-0'
    >
      <!-- MoneyGram -->
      <li class='flex items-center justify-between gap-x-[21px] px-6 py-2 bg-white shadow-md rounded-xl'>
        <div class='flex items-center gap-2'>
          <Moneygram class='w-[76px] h-[76px]' />
        </div>
        <div class='flex flex-col gap-2 text-start'>
          <div class='text-neutral-900 text-base font-bold font-["Inter"] leading-tight'>INR 22,511.85</div>
          <div class='text-neutral-900 text-xs font-normal font-["Inter"] leading-none'>Rate AED 1 = INR 22.87929</div>
          <div class='text-zinc-600 text-xs font-normal font-["Inter"] leading-none'>By Local Bank Payments</div>
        </div>
      </li>

      <!-- EMQ -->
      <li class='flex items-center justify-between gap-x-[21px] px-6 py-2 bg-white shadow-md rounded-xl'>
        <div class='flex items-center justify-center gap-2 w-[76px] h-[76px]'>
          <Emq />
        </div>
        <div class='flex flex-col gap-2 text-start'>
          <div class='text-neutral-900 text-base font-bold font-["Inter"] leading-tight'>INR 22,430.46</div>
          <div class='text-neutral-900 text-xs font-normal font-["Inter"] leading-none'>Rate AED 1 = INR 22.43046</div>
          <div class='text-zinc-600 text-xs font-normal font-["Inter"] leading-none'>By Local Bank Payments</div>
        </div>
      </li>
    </ul>
  </div>
</section>
