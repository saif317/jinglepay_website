---
/**
 * UAE Banner Component
 *
 * This component displays a modern banner with transaction overlay cards
 * for the UAE landing page, featuring money transfer visualizations.
 */
import { Image } from 'astro:assets';

// Import necessary assets
import bannerBgImage from '../../assets/uae-banners/banner1/45ad6b454ce2af22a469169e6a6fb4ea42ebda14.jpg';
import personBgImage from '../../assets/uae-banners/banner1/2df8bd598ed19bc8261af9270967c878876955b2.png';
import debitIcon from '../../assets/uae-banners/banner1/Debit.svg';
import payIcon from '../../assets/uae-banners/banner1/Pay Icon.svg';
import dotIndicator1 from '../../assets/uae-banners/banner1/Dot indictaor.svg';
import dotIndicator2 from '../../assets/uae-banners/banner1/Dot indictaor â€” 2.svg';
import emqLogo from '../../assets/uae-banners/banner1/Frame.svg';
import moneygramLogo from '../../assets/uae-banners/banner1/Frame (1).svg';

// Component props with defaults
export interface Props {
  heading?: string;
  description?: string;
}

const {
  heading = 'Send money abroad instantly',
  description = 'Compare rates, choose your provider, and send money to your loved ones instantly with Jingle Pay.',
} = Astro.props;
---

<section class='relative w-full h-[650px] md:h-[750px] lg:h-[850px] overflow-hidden'>
  <!-- Background Image -->
  <div class='absolute inset-0 z-0 w-full h-full'>
    <Image
      src={bannerBgImage}
      alt='Modern architectural background with palm trees'
      class='object-cover w-full h-full'
      loading='eager'
    />
  </div>

  <!-- Translucent Circle Background Overlay -->
  <div class='absolute z-10 w-[350px] h-[350px] md:w-[450px] md:h-[450px] rounded-full bg-white/40 backdrop-blur-md left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2'></div>

  <!-- Person Image Overlay -->
  <div class='absolute z-20 bottom-0 left-1/2 -translate-x-1/2 h-[60%] md:h-[70%] lg:h-[80%]'>
    <Image
      src={personBgImage}
      alt='Person shopping with phone and shopping bags'
      class='object-contain w-auto h-full'
      loading='eager'
    />
  </div>

  <!-- Overlay Cards -->
  <!-- Cash Withdrawal -->
  <div class='absolute z-30 w-[220px] md:w-[260px] top-8 left-4 md:left-12'>

      <div class='flex items-center justify-between p-4 bg-white shadow-lg rounded-2xl'>
        <div class='flex items-center gap-3'>
          <div class='flex items-center justify-center w-14 h-14 text-white bg-black rounded-full'>JW</div>
          <div>
            <div class='font-bold'>Cash Withdrawal</div>
            <div class='text-sm text-gray-600'>John W.</div>
            <div class='text-xs text-gray-500'>Using Cash Pickup</div>
          </div>
        </div>
        <div class='text-right'>
          <div class='font-bold'>1,000.00 AED</div>
          <div class='text-xs text-gray-500'>Today</div>
          <div class='text-xs text-gray-500'>15:00</div>
        </div>
      </div>

  </div>

  <!-- Request Card -->
  <div class='absolute z-30 w-[260px] md:w-[300px] top-8 right-4 md:right-12'>
    <div class='relative bg-white rounded-2xl shadow-lg p-5 pt-7'>
      <!-- Top indicator bar -->
      <span class='absolute top-2 left-1/2 -translate-x-1/2 block w-14 h-1.5 rounded-full bg-gray-300'></span>
      <div class='flex items-center justify-between mb-3'>
        <h3 class='font-semibold'>Request</h3>
        <span class='block w-4 h-0.5 bg-gray-400 rounded'></span>
      </div>
      <div class='flex items-center justify-between mb-6'>
        <div class='w-14 h-14 rounded-full overflow-hidden'>
          <img src='https://i.pravatar.cc/40?img=1' alt='John Doe' />
        </div>
        <svg xmlns='http://www.w3.org/2000/svg' class='w-8 h-8 p-1.5 text-white bg-black rounded-full' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'>
          <polyline points='20 6 9 17 4 12'/>
        </svg>
        <div class='w-14 h-14 rounded-full overflow-hidden'>
          <img src='https://i.pravatar.cc/40?img=2' alt='Alex Paul' />
        </div>
      </div>
      <label class='block mb-2 text-base font-semibold text-gray-900'>Amount</label>
      <div class='flex items-center justify-between w-full px-4 py-3 border rounded-lg'>
        <span class='text-xl font-semibold tracking-wide'>1,000</span>
        <div class='flex items-center gap-2'>
          <span class='w-5 h-5 inline-block'>ðŸ‡¦ðŸ‡ª</span>
          <span class='text-sm font-medium text-gray-800'>AED</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Send Money Card -->
  <div class='absolute z-30 w-[260px] md:w-[300px] bottom-24 left-4 md:left-12'>
      <div class='bg-white rounded-2xl shadow-lg p-6 md:p-7'>
                <!-- Header -->
        <div class='flex items-center justify-between mb-6'>
          <h3 class='text-lg font-semibold'>Send</h3>
          <span class='text-lg font-semibold text-gray-500'>AED 1,000</span>
        </div>
        <!-- Currency Icons Row -->
        <div class='flex items-center justify-between'>
          <!-- From Currency -->
          <div class='flex flex-col items-center gap-2'>
            <span class='text-4xl md:text-5xl'>ðŸ‡¦ðŸ‡ª</span>
            <span class='text-base font-semibold'>AED</span>
          </div>
          <!-- Arrow -->
          <div class='flex items-center justify-center w-12 h-12 md:w-14 md:h-14 bg-black rounded-full'>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </div>
          <!-- To Currency -->
          <div class='flex flex-col items-center gap-2'>
            <span class='text-4xl md:text-5xl'>ðŸ‡®ðŸ‡³</span>
            <span class='text-base font-semibold'>INR</span>
          </div>
        </div>
      </div>

  </div>

  <!-- Provider Cards -->
  <div class='absolute z-30 w-[260px] md:w-[300px] bottom-16 right-4 md:right-12 space-y-3'>
      <div class='space-y-3'>
        <!-- MoneyGram Card -->
        <div class='flex items-center justify-between p-4 bg-white shadow-lg rounded-2xl'>
          <div class='flex items-center gap-2'>
            <Image src={moneygramLogo} alt='MoneyGram' width={24} height={24} />
            <span class='font-bold text-red-500'>MoneyGram</span>
          </div>
          <div class='text-right'>
            <div class='font-bold'>INR 22,511.85</div>
            <div class='text-xs text-gray-600'>Rate AED 1 = INR 22.87929</div>
            <div class='text-xs text-gray-500'>By Local Bank Payments</div>
          </div>
        </div>

        <!-- EMQ Card -->
        <div class='flex items-center justify-between p-4 bg-white shadow-lg rounded-2xl'>
          <div class='flex items-center gap-2'>
            <Image src={emqLogo} alt='EMQ' width={24} height={24} />
            <span class='font-bold text-blue-500'>EMQ</span>
          </div>
          <div class='text-right'>
            <div class='font-bold'>INR 22,430.46</div>
            <div class='text-xs text-gray-600'>Rate AED 1 = INR 22.43046</div>
            <div class='text-xs text-gray-500'>By Local Bank Payments</div>
          </div>
        </div>
      </div>

  </div>

  <!-- Carousel Indicators -->
      <div class='flex items-center justify-center gap-2 mt-4'>
        <Image src={dotIndicator1} alt='Active slide' width={10} height={10} />
        <Image src={dotIndicator2} alt='Inactive slide' width={10} height={10} />
        <Image src={dotIndicator2} alt='Inactive slide' width={10} height={10} />
      </div>

</section>
