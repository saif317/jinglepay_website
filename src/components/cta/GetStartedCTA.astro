---
// App store links that would normally come from a CMS or configuration
const appStoreLinks = {
  android: 'https://play.google.com/store/apps/details?id=com.jinglepay.app',
  ios: 'https://apps.apple.com/app/jinglepay/id1234567890'
};

// QR code URL for app download
const qrCodeUrl = '/images/qr-download.png';
---

<section class="cta py-16">
  <div class="container mx-auto px-4">
    <div class="cta-container bg-gradient-to-r from-[#794eff] to-[#6b3cde] rounded-3xl py-12 px-8 relative overflow-hidden text-white">
      <!-- Background decorative elements -->
      <div class="absolute -top-20 -right-20 w-64 h-64 rounded-full bg-white opacity-10"></div>
      <div class="absolute -bottom-32 -left-16 w-64 h-64 rounded-full bg-white opacity-5"></div>
      
      <div class="relative z-10 grid grid-cols-1 lg:grid-cols-5 gap-10 items-center">
        <!-- CTA Content: 3/5 width on desktop -->
        <div class="lg:col-span-3 text-center lg:text-left">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Get Started with JinglePay?</h2>
          <p class="text-xl mb-8 opacity-90 max-w-xl mx-auto lg:mx-0">
            Download the app and transform your financial experience today. Join millions of satisfied users across UAE.
          </p>
          
          <!-- App Store Download Buttons -->
          <div class="flex flex-wrap justify-center lg:justify-start gap-4 mb-8">
            <a 
              href={appStoreLinks.android} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="download-button bg-black rounded-xl px-6 py-3 flex items-center hover:bg-gray-900 transition"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.9,2.4c-0.1,0.3-0.1,0.6-0.1,0.9v13.6c0,0.3,0,0.6,0.1,0.9l0.1,0.1l7.6-7.6v-0.1L17.9,2.4L17.9,2.4z M2.5,0.5
                  C2.2,0.6,1.9,0.8,1.7,1.1v0l7.8,7.8l-7.8,7.8c0.2,0.3,0.5,0.5,0.8,0.6l8.5-8.5L2.5,0.5z M12,9.8l2.8-2.8l7.7,7.7
                  c0.7-0.2,1.1-0.8,1.1-1.6c0-0.8-0.4-1.5-1.1-1.6l-7.7-7.7L12,9.8z"/>
              </svg>
              <div class="text-left">
                <div class="text-xs opacity-80">Download on</div>
                <div class="text-sm font-semibold">Google Play</div>
              </div>
            </a>
            
            <a 
              href={appStoreLinks.ios} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="download-button bg-black rounded-xl px-6 py-3 flex items-center hover:bg-gray-900 transition"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.71,19.5c-.83,1.24-1.71,2.45-3.05,2.47-1.34.03-1.77-.79-3.29-.79s-2,.77-3.27.82c-1.31.05-2.3-1.32-3.14-2.53C4.25,17.03,2.94,12.45,4.7,9.39c.87-1.52,2.43-2.48,4.12-2.51,1.28-.02,2.5.87,3.29.87.78,0,2.26-1.07,3.81-.91.65.03,2.47.26,3.64,1.98-.09.06-2.17,1.28-2.15,3.81.03,3.02,2.65,4.03,2.68,4.04-.03.07-.42,1.44-1.38,2.83M13,3.5c.73-.83,1.94-1.46,2.94-1.5.13,1.17-.34,2.35-1.04,3.19-.69.85-1.83,1.51-2.95,1.42-.15-1.15.41-2.35,1.05-3.11Z"></path>
              </svg>
              <div class="text-left">
                <div class="text-xs opacity-80">Download on</div>
                <div class="text-sm font-semibold">App Store</div>
              </div>
            </a>
          </div>
          
          <!-- Features highlight -->
          <div class="features-highlight flex flex-wrap justify-center lg:justify-start gap-x-8 gap-y-4 text-sm">
            <div class="feature flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Free Account</span>
            </div>
            <div class="feature flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>No Monthly Fees</span>
            </div>
            <div class="feature flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Easy Setup</span>
            </div>
          </div>
        </div>
        
        <!-- QR Code and Mobile Preview: 2/5 width on desktop -->
        <div class="lg:col-span-2 flex justify-center">
          <div class="qr-container bg-white p-6 rounded-xl shadow-xl text-center">
            <img 
              src={qrCodeUrl} 
              alt="Download JinglePay App" 
              class="w-32 h-32 mx-auto mb-3"
              onError="this.onerror=null; this.src='/images/qr-placeholder.png';"
            />
            <p class="text-[#794eff] font-medium">Scan to download</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
