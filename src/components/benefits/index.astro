---
import { Image } from 'astro:assets';

import benefit1 from '@assets/images/benefits/benefit-pic-1.png';
import benefit2 from '@assets/images/benefits/benefit-pic-2.png';
import benefit3 from '@assets/images/benefits/benefit-pic-3.png';
import benefit4 from '@assets/images/benefits/benefit-pic-4.png';
import benefit5 from '@assets/images/benefits/benefit-pic-5.png';
import benefit6 from '@assets/images/benefits/benefit-pic-6.png';

import billPayment1 from '@assets/icons/Electricity.svg';
import billPayment2 from '@assets/icons/Gas.svg';
import billPayment3 from '@assets/icons/Water.svg';
import billPayment4 from '@assets/icons/Telcos.svg';

import earth from '@assets/images/benefits/earth.png';
import guy from '@assets/images/benefits/guy.png';
import girl from '@assets/images/benefits/girl.png';
import aniaHala from '@assets/images/benefits/ania-hala.png';

const {
  translations: { benefits = {}, billPayment = {}, savings = {} },
} = Astro.locals;

const benefitCardImages = [
  {
    image: benefit1,
    alt: 'Benefit 1',
  },
  {
    image: benefit2,
    alt: 'Benefit 2',
  },
  {
    image: benefit3,
    alt: 'Benefit 3',
  },
  {
    image: benefit4,
    alt: 'Benefit 4',
  },
  {
    image: benefit5,
    alt: 'Benefit 5',
  },
  {
    image: benefit6,
    alt: 'Benefit 6',
  },
];

const benefitCards = benefitCardImages.map((benefitCard, index) => {
  return { ...benefitCard, ...benefits.benefits[index] };
});

const billPaymentIcons = [billPayment1, billPayment2, billPayment3, billPayment4].map((icon, index) => {
  return { icon, text: billPayment?.icons?.[index] || '' };
});

// --- Image Optimization Config ---
// Adjust widths based on max expected size in the grid (e.g., 1/3 of container width on large screens)
// Sizes reflect ~100% width on small, ~50% on medium, ~33% on large viewports
const benefitImageWidths = [200, 300, 400];
const benefitImageSizes = '(max-width: 639px) 90vw, (max-width: 1023px) 45vw, 30vw';

const earthImageWidths = [200, 300, 380];
const earthImageSizes = '(max-width: 767px) 60vw, (max-width: 1023px) 40vw, 380px'; // Adjust based on layout

const sideImageWidths = [150, 220, 294]; // For guy, girl, aniaHala
const guyImageSizes = '(max-width: 767px) 45vw, (max-width: 1023px) 30vw, 294px'; // Adjust
const girlImageSizes = '(max-width: 767px) 45vw, (max-width: 1023px) 30vw, 280px'; // Adjust
const aniaHalaImageSizes = '(max-width: 767px) 30vw, (max-width: 1023px) 20vw, 180px'; // Adjust
---

<div
  id='benefits-section'
  class='flex flex-col gap-y-12 items-center px-4 py-12 mx-auto md:gap-y-16 lg:gap-y-20 sm:px-8 md:px-12 lg:px-16 md:py-16 lg:py-20'
>
  {/* Responsive padding, max-width */}
  <div class='flex flex-col gap-y-3 items-center text-center sm:gap-y-4'>
    <h4 class='text-3xl font-extrabold sm:text-4xl text-slate-900'>{benefits.title}</h4>
    <span class='max-w-3xl text-base font-normal sm:text-lg md:text-xl text-zinc-700'>
      {benefits.subtitle}
    </span>
  </div>

  <div class='grid grid-cols-1 gap-8 w-full sm:grid-cols-2 lg:grid-cols-3 md:gap-12 lg:gap-16'>
    {
      benefitCards.map((benefit) => (
        <div
          class='flex flex-col gap-y-4 items-center text-center sm:items-start sm:text-start'
          id={benefit.alt.toLowerCase().split(' ').join('-')}
        >
          {/* w-full h-auto aspect-[4/3] object-contain max-h-[260px] sm:max-h-[300px] drop-shadow-lg */}
          <Image
            src={benefit.image}
            alt={benefit.alt}
            widths={benefitImageWidths}
            sizes={benefitImageSizes}
            class='aspect-[4/3] rounded-lg'
            loading='lazy'
            decoding='async'
          />
          <h5 class='text-lg font-extrabold sm:text-xl 3xl:text-2xl 4xl:text-3xl text-slate-800'>{benefit.title}</h5>
          <div class='flex flex-col text-base text-gray-600 sm:text-lg 3xl:text-xl 4xl:text-2xl'>
            {benefit.description?.map((desc: string) => {
              const boldIndex = benefit.boldText ? desc.indexOf(benefit.boldText) : -1;
              return (
                <p class={`leading-relaxed ${boldIndex !== -1 ? 'font-normal' : ''}`}>
                  {boldIndex !== -1 ? (
                    <>
                      {desc.substring(0, boldIndex)}
                      <strong class='font-semibold text-gray-700'>{benefit.boldText}</strong>
                      {desc.substring(boldIndex + (benefit.boldText || '').length)}
                    </>
                  ) : (
                    desc
                  )}
                </p>
              );
            })}
          </div>
        </div>
      ))
    }
  </div>

  <div
    id='bill-payments'
    class='bg-slate-100 text-center py-8 sm:py-9 flex flex-col items-center justify-center gap-y-5 sm:gap-y-7 px-6 sm:px-12 md:px-16 lg:px-24 rounded-2xl md:rounded-[30px] w-full'
  >
    <h5 class='text-2xl font-extrabold sm:text-3xl text-slate-900'>{billPayment.title}</h5>
    <span class='max-w-3xl text-base font-normal sm:text-lg md:text-xl text-zinc-700'>{billPayment.subtitle}</span>

    <div class='grid grid-cols-2 gap-6 mt-4 sm:grid-cols-2 lg:grid-cols-4'>
      {
        billPaymentIcons.map((item) => (
          <div class='flex flex-col items-center text-center gap-y-2 sm:gap-y-3 min-w-[80px] group'>
            <Image
              src={item.icon}
              alt={item.text}
              class='w-12 h-12 drop-shadow-md transition-all duration-200 sm:w-16 sm:h-16 md:w-20 md:h-20 hover:drop-shadow-lg'
              loading='lazy'
              decoding='async'
            />
            <span class='mt-1 text-sm font-medium sm:text-base md:text-lg text-zinc-800'>{item.text}</span>
          </div>
        ))
      }
    </div>
  </div>

  <div class='flex flex-col gap-y-8 w-full xl:flex-row xl:gap-x-7'>
    <div
      class='bg-gradient-to-br from-teal-400 via-green-400 to-teal-400 drop-shadow-2xl rounded-xl md:rounded-[20px] p-6 sm:p-8 md:p-10 xl:p-12 w-full flex flex-col justify-between text-black'
    >
      <p class='w-full max-w-[20rem]'>
        <span class='block text-lg font-medium opacity-90 text-start sm:text-xl'>{savings.trustedBy}</span>
        <span class='block mt-1 text-4xl font-black text-center sm:text-5xl md:text-6xl 2xl:text-5xl'
          >{savings.userNum}</span
        >
        <span class='block mt-1 text-lg font-medium opacity-90 text-end sm:text-xl sm:mt-0'
          >{savings.usersWorldWide}</span
        >
      </p>

      <div class='flex justify-center items-center w-full drop-shadow-2xl'>
        <Image
          src={earth}
          alt='Earth illustration'
          widths={earthImageWidths}
          sizes={earthImageSizes}
          class='max-h-[250px] sm:max-h-[300px] md:max-h-[380px] xl:max-h-[310px] w-auto'
          loading='lazy'
          decoding='async'
        />
      </div>

      <p class='mt-4 text-end sm:mt-0'>
        <span class='block text-4xl font-extrabold sm:text-5xl md:text-6xl 2xl:text-5xl'>{savings.transactionNum}</span>
        <span class='block text-2xl font-extrabold opacity-90 sm:text-3xl md:text-4xl'>{savings.transactionText}</span>
      </p>
    </div>

    <div class='flex flex-col gap-y-4 sm:gap-y-6 xl:gap-y-[22px] w-full'>
      <div class='flex flex-col sm:flex-row items-stretch gap-4 sm:gap-6 xl:gap-[22px]'>
        <Image
          src={guy}
          alt='Jingle Pay User 1 - Smiling man'
          width={294}
          widths={sideImageWidths}
          sizes={guyImageSizes}
          class='w-full sm:w-1/2 h-auto object-cover rounded-lg drop-shadow-2xl md:rounded-[20px]'
          loading='lazy'
          decoding='async'
        />
        <div
          class='flex flex-col drop-shadow-2xl items-center justify-between rounded-lg md:rounded-[20px] w-full sm:w-1/2 p-4 sm:p-6 bg-slate-100 gap-y-4'
        >
          <span class='text-lg font-black text-center sm:text-xl lg:mt-[6rem] text-slate-800 lg:text-3xl'
            >{savings.zeroFees}</span
          >
          <Image
            src={aniaHala}
            alt='Jingle Pay User 2 - Ania & Hala'
            width={180}
            widths={sideImageWidths}
            sizes={aniaHalaImageSizes}
            class='max-w-[120px] drop-shadow-2xl sm:max-w-[150px] md:max-w-[180px] h-auto object-contain'
            loading='lazy'
            decoding='async'
          />
        </div>
      </div>
      <div
        class='flex flex-col sm:flex-row items-stretch justify-center p-4 sm:p-6 gap-4 sm:gap-6 bg-slate-100 rounded-lg md:rounded-[20px]'
      >
        <div
          class='flex drop-shadow-2xl flex-col justify-between lg:justify-center gap-y-4 flex-1 sm:min-h-[200px] md:min-h-[267px]'
        >
          <div>
            <span class='block text-lg font-black sm:text-xl lg:text-3xl xl:text-lg text-slate-800'
              >{savings.genrated}</span
            >
            <span class='block mt-2 text-2xl font-black sm:text-3xl lg:text-5xl xl:text-xl text-slate-900'
              >{savings.amount}
            </span>
          </div>
          <span class='block mt-4 text-base font-normal text-gray-600 sm:text-lg lg:text-2xl xl:text-lg'
            >{savings.subtitle}</span
          >
        </div>
        <Image
          src={girl}
          alt='Jingle Pay User 3 - Woman smiling'
          widths={sideImageWidths}
          sizes={girlImageSizes}
          class='w-full max-w-[450px] xl:max-w-[250px] 2xl:max-w-[200px] h-auto object-cover rounded-lg md:rounded-[20px] self-center sm:self-auto'
          loading='lazy'
          decoding='async'
        />
      </div>
    </div>
  </div>
</div>
