---
// src/components/Header.astro
import QRModalTriggerer from '@components/common/QRModalTriggerer.astro';
import CountryLanguageSelector from '@components/country-language-selector/index.astro';
import qrCodeSrc from '@assets/icons/qr.png';
---

<header class='fixed top-0 z-50 flex items-center w-full px-32 py-6 bg-white shadow-xl'>
  <a href='/' class='absolute left-32'>
    <img src='/JinglePay-logo.svg' alt='Jingle Pay' class='h-[35px] w-auto' />
  </a>

  <nav class='bg-[#ececec] rounded-[10px] px-8 py-2 mx-auto'>
    <ul class='flex items-center gap-12 list-none'>
      <li>
        <a
          href='#featured-section'
          class='no-underline text-[#1c1c1c] text-base font-semibold transition-colors duration-300 hover:text-[#794eff] py-2'
          >Jingle Pay</a
        >
      </li>
      <li>
        <a
          href='#benefits-section'
          class='no-underline text-[#1c1c1c] text-base font-semibold transition-colors duration-300 hover:text-[#794eff] py-2'
          >Benefits</a
        >
      </li>
      <li>
        <a
          href='/contact'
          class='no-underline text-[#1c1c1c] text-base font-semibold transition-colors duration-300 hover:text-[#794eff] py-2'
          >Contact</a
        >
      </li>
    </ul>
  </nav>

  <div class='absolute flex items-center gap-2 right-32'>
    <QRModalTriggerer>
      <div>
        <a
          href='#download'
          class='inline-block bg-[#794eff] text-white rounded-xl px-6 py-3 text-sm font-medium hover:bg-[#6a3ad9] transition-colors duration-300 min-w-[154px]'
          >Download App</a
        >
      </div>
    </QRModalTriggerer>
    <CountryLanguageSelector />
  </div>
</header>

<script>
  // Mobile menu functionality
  const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
  const mainNav = document.querySelector('nav');

  mobileMenuToggle?.addEventListener('click', () => {
    mainNav?.classList.toggle('active');
    mobileMenuToggle.classList.toggle('active');
  });
</script>
