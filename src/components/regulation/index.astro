---
const {
  translations: { regulation = {} },
} = Astro.locals;
---

<section id='regulation' class='px-4 regulation-security-container sm:px-8 md:px-12 lg:px-16'>
  <div class='regulation-section'>
    <h2 class='section-title'>{regulation.title}</h2>
    {regulation.description.map((description: string) => <p class='regulation-text'>{description}</p>)}
  </div>

  <div class='security-section'>
    <h2 class='section-title'>{regulation.security}</h2>
    <div class='security-features'>
      <div class='security-feature'>
        <!-- <img src='/images/security-icon-1.svg' alt='Security feature 1' class='security-icon' /> -->
        <!-- <span class='security-label'>Multi-factor Authentication</span> -->
      </div>
      <div class='security-feature'>
        <!-- <img src='/images/security-icon-2.svg' alt='Security feature 2' class='security-icon' /> -->
        <!-- <span class='security-label'>Data Encryption</span> -->
      </div>
      <div class='security-feature'>
        <!-- <img src='/images/security-icon-3.svg' alt='Security feature 3' class='security-icon' /> -->
        <!-- <span class='security-label'>Real-time Monitoring</span> -->
      </div>
      <div class='security-feature'>
        <!-- <img src='/images/security-icon-4.svg' alt='Security feature 4' class='security-icon' /> -->
        <!-- <span class='security-label'>Transaction Verification</span> -->
      </div>
      <div class='security-feature'>
        <!-- <img src='/images/security-icon-5.svg' alt='Security feature 5' class='security-icon' /> -->
        <!-- <span class='security-label'>Fraud Detection</span> -->
      </div>
    </div>
  </div>
</section>

<style>
  .regulation-security-container {
    background-color: #f8f9fa;
    border-radius: 12px;
    margin: 2rem 0;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .regulation-text {
    color: #555;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .security-section {
    margin-top: 3rem;
  }

  .security-features {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .security-feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    width: 72px;
    height: 72px;
    background-color: #c4c4c4;
  }

  .security-icon {
    width: 64px;
    height: 64px;
    background-color: #e2e2e2;
    border-radius: 8px;
  }

  .security-label {
    font-size: 0.9rem;
    font-weight: 500;
    color: #444;
    text-align: center;
  }
</style>
