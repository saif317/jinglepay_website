export async function getStaticPaths() {
  const countries = [
    'pak',
    //  'uae'
  ];
  const languages: Record<string, string[]> = {
    pak: ['en', 'ur'],
    // uae: ['en', 'ar'],
  };

  return countries.flatMap((country) => {
    return languages[country].map((lang) => {
      return {
        params: { country, lang },
      };
    });
  });
}

const { country, lang } = Astro.params;

