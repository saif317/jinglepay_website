---
import Layout from '@layouts/Layout.astro';
import UAEHero from '@components/hero-section/UAEHero.astro';
import TrustedByLogos from '@components/partners/TrustedByLogos.astro';
import TakeControl from '@components/features/TakeControl.astro';
import GoToApp from '@components/app/GoToApp.astro';
import BorderlessPayments from '@components/payments/BorderlessPayments.astro';
import PlatinumCard from '@components/card/PlatinumCard.astro';
import UserTestimonials from '@components/testimonials/UserTestimonials.astro';
import StatsSection from '@components/stats/StatsSection.astro';
import InvestorSection from '@components/investors/InvestorSection.astro';
import PartnersSection from '@components/partners/PartnersSection.astro';
import GetStartedCTA from '@components/cta/GetStartedCTA.astro';
import { getStaticPathsWrapper } from '@util/getStaticPaths';

// Define static paths for UAE with English and Arabic support
export const getStaticPaths = getStaticPathsWrapper(
  ['are'],
  {
    are: ['en', 'ar'],
  }
);

// Middleware in Astro.js will inject translations and locale information
const { translations, country, lang } = Astro.locals;

// Define page-specific translations and content here
const pageTitle = 'JinglePay - The UAE Fintech App';
const pageDescription = 'Send money, pay bills, and manage your finances with JinglePay - the leading financial app in the UAE';
---

<Layout>
  <!-- Hero Section with Currency Conversion -->
  <UAEHero />

  <!-- Trusted By Partners Section -->
  <TrustedByLogos />

  <!-- Take Full Control Section -->
  <TakeControl />

  <!-- The Go-To App Section -->
  <GoToApp />

  <!-- Borderless Payments Section -->
  <BorderlessPayments />

  <!-- Free Platinum MasterCard Section -->
  <PlatinumCard />

  <!-- Testimonials Section -->
  <UserTestimonials />

  <!-- Stats Section -->
  <StatsSection />

  <!-- Investors Section -->
  <InvestorSection />

  <!-- Partners Section -->
  <PartnersSection />

  <!-- CTA Section -->
  <GetStartedCTA />
</Layout>
