---
import Layout from '@layouts/Layout.astro';
import { getStaticPathsWrapper } from '@util/getStaticPaths';
import PrivacyPolicyUAE from '@components/privacy-policy/uae.astro';

// Import MDX content for UAE languages
import EnContent from '../../../content/privacy-policy/are/en.mdx';
import ArContent from '../../../content/privacy-policy/are/ar.mdx';
import PrivacyPolicyDefault from '@components/privacy-policy/index.astro';

const { country, lang } = Astro.params;

// Determine which MDX file to render based on `lang`
const Content = lang === 'ar' ? ArContent : EnContent;


export const getStaticPaths = getStaticPathsWrapper(
  [
    'pak',
    'are',
  ],
  {
    pak: ['en', 'ur'],
    are: ['en', 'ar'],
  }
);
---

<Layout>
  {country === 'are' ? (
    <PrivacyPolicyUAE lang={lang} Content={Content} />
  ) : (
    <PrivacyPolicyDefault />
  )}
</Layout>



